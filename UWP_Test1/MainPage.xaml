<Page
    x:Class="UWP_Test1.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWP_Test1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
            <TextBlock Margin="10" Text="Hello, Windows 10 IoT Core!" x:Name="myTextBlock" FontSize="36" />
            <Button HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10" Content="Hello" Click="Button_Click" />
        </StackPanel>
    </Grid>
</Page>
